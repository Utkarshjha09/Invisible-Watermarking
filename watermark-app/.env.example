# Vite Environment Variables
# Variables prefixed with VITE_ are exposed to the client-side code

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# File Upload Settings
VITE_MAX_FILE_SIZE=16777216
VITE_SUPPORTED_FORMATS=image/png,image/jpeg,image/jpg

# UI Configuration
VITE_APP_TITLE=Invisible Watermarking Tool
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced watermarking application with DCT algorithms

# Feature Flags
VITE_ENABLE_3D_BACKGROUND=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_AUTO_DOWNLOAD=true

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHER=false

# Algorithm Defaults
VITE_DEFAULT_ALGORITHM=block_dct_q
VITE_DEFAULT_DELTA=0.05
VITE_MIN_DELTA=0.02
VITE_MAX_DELTA=0.10

# Performance Settings
VITE_LAZY_LOADING=true
VITE_PREFETCH_COMPONENTS=true

# Analytics (if implementing)
# VITE_ANALYTICS_ID=your-analytics-id
# VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true

# Production Settings (for build)
# VITE_API_URL=https://your-production-api.com
# VITE_ENABLE_DEBUG_MODE=false
# VITE_DEV_TOOLS=false